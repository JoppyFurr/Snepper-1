 00     mov     rX, { rX / 0xXX }
 10-13  unused
 14     mov     dh, rX
 18     mov     dl, rX
 1c     ldi     hl, 0xXXXX
 1d     mov     dc, hl
 1e     mov     sp, hl
 1f     unused

 20     ld      rX, [dh, rX]
 30     st      [dh, rX], rX
 40     ld      rX, [0xXXXX]
 44     st      [0xXXXX], rX
 48     ld      rX, [dc++]
 4c     st      [dc++], rX
 50     pop     rX
 54     push    rX
 58-5f  unused

 60     jmp     hl
 61     unused
